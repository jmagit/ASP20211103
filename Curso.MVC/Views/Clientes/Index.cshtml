@model IEnumerable<Curso.Domains.Entities.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Clientes
            </th>
            <td><a asp-action="Create">Nuevo</a></td>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title) @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.MiddleName) @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CustomerId">Ver</a> |
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        @for (int i = 0; i < (decimal)ViewData["totalPages"]; i++) {
        <li class="page-item"><a asp-action="Index">@(i + 1)</a></li>
        }
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>