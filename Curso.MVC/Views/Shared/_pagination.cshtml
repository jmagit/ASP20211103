<p>Seleciona una página</p>
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item@(ViewBag.page==0?" disabled":"")"><a class="page-link" asp-route-page="0" asp-route-rows="@ViewBag.rows"><span aria-hidden="true">&laquo;</span></a></li>
        @for (int i = 0; i < (decimal)ViewBag.totalPages; i++) {
            <li class="page-item@(ViewBag.page==i?" active":"")"><a class="page-link" asp-route-page="@i" asp-route-rows="@ViewBag.rows">@(i + 1)</a></li>
        }
        <li class="page-item@(ViewBag.page==ViewBag.totalPages-1?" disabled":"")"><a class="page-link" asp-route-page="@(ViewBag.totalPages-1)" asp-route-rows="@ViewBag.rows"><span aria-hidden="true">&raquo;</span></a></li>
    </ul>
</nav>
